    android:background="@drawable/selector_spinner_item"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/spinner_item_id_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/spinner_item_restaurantname_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

</LinearLayout>