<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="top|center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/activity_floatview_stopbutton"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="@string/activity_floatview_stopbutton_text"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/activity_floatview_packagename_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/activity_floatview_launchtimes_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/activity_floatview_meminfo_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

</LinearLayout>